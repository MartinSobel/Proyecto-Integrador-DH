<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head')  %>
</head>
<body>
 
  <%- include('./partials/header')  %>

  <main class="containerlogin" >
    <div class="datos" id="containerprofile">

        <div class="titulacion">
            <h2>My profile</h2>
        </div>

        <div class="formulario">
            <form id="profile" action="/users/profile/<%= user.id %>" method="POST">
                <h3>Name:</h3>       
                <input type="text" id="name" name="name" value="<%= user.name %>" class="input-control"><br>
                <h3>Phone:</h3>  
                <input type="tel" id="phone" name="phone" value="<%= user.phone %>" class="input-control"><br>
                <button id="button-profile" type="submit" class="btn">Edit</button>
            </form>

            <% if(typeof msg != 'undefined'){ %>
              <p class="error"><%= msg %></p>
            <% } %>
            <a href="/product_manager" id="prod-manager" class="scale">Product Manager</a>

            <a href="/users/logout" class="logoutprof">Log out</a>
        </div>
        
      </div>    

    </main>
  <%- include('./partials/footer')  %>


</body>
</html>