<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head')  %>
</head>
<body>
    <%- include('./partials/header')  %>
    <div id="details">
      <div id="product-main">
          <h1><%= product.name %></h1>
          <img src="/images/jap-product-title.png" alt="" id="product_title_jap">
          <!-- <span><%= product.category_id %></span> -->
          <h3 id="price">$<%= product.price %></h3>
      </div>
      <div id="product-description">
        <%= product.description %>
      </div>
    
    <div id="cart-options">
        <form action="/products/addToCart/<%= product.id %>" method="POST">
          <button type="submit" class="btn">Add to cart</button>
        </form>

        <a href="/products/menu" id="back" class="scale">Back to menu</a>
    </div>
  </div>
    
    <img src="/images/my-uploads/<%= product.image %>" alt="" id="product_image">

    <%- include('./partials/footer')  %>
</body>
</html>