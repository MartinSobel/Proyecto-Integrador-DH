<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head')  %>
  </head>
  <body>
    <main class="main-formulario">

        <img src="/images/logo.png" id="form-logo">
        <h1>Kintsugi</h1>
        <img src="/images/jap-kintsugi.png" id="form-jap-kintsugi">

        <div class="nav-menu">
            <ul>
              <li><a href="/product_manager/add">Upload product</a></li>
            </ul>
            <ul>
              <li><a class="selected-nav-menu" href="/product_manager/">Edit product</a></li>
            </ul>
          </div>
        
        <div class="container-form">
            <div class="formulario">
                
                <form action="/product_manager/edit/<%= productFound.id %>" method="POST" enctype='multipart/form-data'>
                    <br><br>
                    <img src="/images/fotos-sushi/producto-middle.jpg" id="form-foto1"><br>
                    <img src="/images/fotos-sushi/producto-left.jpg" id="form-foto2"><br>
                    <input type="file" id="add-img" name="img"><br><br>
                    <p>Click the picture to edit or delete</p>
                    <h3>Product name</h3>
                    <input type="text" id="name" name="name" value="<%= productFound.name %>"><br>
                    <h3>Description</h3>
                    <p>Max. 200 characters</p>
                    <input type="text" id="desc" name="desc" value="<%= productFound.desc %>"><br>
                    <h3>Price</h3>
                    <p>Only numbers</p>
                    <input type="text" id="add-price" name="price" value="<%= productFound.price %>"><br>
                    <h3>Category</h3>
                    <input type="text" id="cat" name="cat" value="<%= productFound.cat %>"><br><br>

                    <button type="submit">Save changes</button><br>
                    <a href="/product_manager/destroy/<%= productFound.id %>">Delete product</a>
                
                </form>
                
            </div>
          

        </div>

    </main>
</body>
</html>