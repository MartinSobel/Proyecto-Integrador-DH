<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head')  %>
  </head>
  <body>
    <main>
      <%- include('./partials/header')  %>

     <div class="container-menu">

     <div class="titulo-menu">
       <h2>Menu</h2>
       <img src="/images/jap-menu.png" id="loginjapo">
     </div>


    <div class="nav-menu">
      <ul>
        <li><a class="selected-nav-menu" href="#">Suggested</a></li>
        <li><a href="#">Rolls</a></li>
        <li><a href="#">Mixed</a></li>
        <li><a href="#">Snacks</a></li>
        <li><a href="#">Salads</a></li>
        <li><a href="#">Tempura</a></li>
      </ul>
      <hr>
      <ul>
        <li><a href="#" id="dessert">Dessert</a></li>
        <li><a href="#" id="drinks">Drinks</a></li>
        <i class="fas fa-plus"></i>
      </ul>
    </div>

    <div class="container-pmenu">
      <div class="titulos-pmenu">
        <h3>Suggested dishes</h3>
        <p>Sort by <i class="fas fa-caret-down"></i></p>
      </div>
      <div class="products-menu">

        <% products.forEach(function(products){ %>

        <div class="single-pmenu">
            <img src="/images/my-uploads/<%= products.image %>" class="foto-sushi-menu">
            <p><%= products.name %><br>$<%= products.price %></p>
            <a href="/products/detail/<%= products.id %>"><i class="fas fa-plus"></i></a>
        </div>

        <% }); %>

      </div>
    </div>

  
    </div>

    <%- include('./partials/footer')  %>
    </main>
  </body>
</html>